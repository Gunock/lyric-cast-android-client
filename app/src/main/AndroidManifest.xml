<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.gunock.lyriccast">

    <!--  WiFi permissions  -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!--  File permissions  -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".LyricCastApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_lyriccast"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lyriccast_round"
        android:screenOrientation="sensorPortrait"
        android:theme="@style/Theme.LyricCast.DarkActionBar">

        <activity
            android:name=".activities.LaunchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LyricCast.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.LyricCast.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.SetlistEditorActivity"
            android:label="@string/title_setlist_editor"
            android:parentActivityName="pl.gunock.lyriccast.activities.SetlistEditorActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar" />

        <activity
            android:name=".activities.SongEditorActivity"
            android:label="@string/title_song_editor"
            android:parentActivityName="pl.gunock.lyriccast.activities.SongEditorActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.SongControlsActivity"
            android:label="@string/title_controls"
            android:parentActivityName="pl.gunock.lyriccast.activities.SongControlsActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar" />

        <activity
            android:name=".activities.SetlistControlsActivity"
            android:label="@string/title_controls"
            android:parentActivityName="pl.gunock.lyriccast.activities.SetlistControlsActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar" />

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="pl.gunock.lyriccast.activities.SettingsActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar" />

        <activity
            android:name=".activities.CategoryManagerActivity"
            android:label="@string/title_categories"
            android:parentActivityName="pl.gunock.lyriccast.activities.CategoryManagerActivity"
            android:theme="@style/Theme.LyricCast.NoActionBar.Light" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="pl.gunock.lyriccast.cast.CastOptionsProvider" />
    </application>

</manifest>