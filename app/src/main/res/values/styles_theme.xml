<resources>

    <style name="Theme.LyricCast.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/color_primary_dark</item>

        <item name="alertDialogTheme">@style/Theme.LyricCast.Dialog.NoTitle</item>
        <item name="dialogTheme">@style/Theme.LyricCast.Dialog.NoTitle</item>

        <item name="mediaRouteButtonTint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:textViewStyle">@style/Widget.LyricCast.TextView</item>
        <item name="materialButtonStyle">@style/Widget.LyricCast.Button</item>
        <item name="buttonStyle">@style/Widget.LyricCast.Button</item>
        <item name="imageButtonStyle">@style/Widget.LyricCast.ImageButton</item>
        <item name="spinnerStyle">@style/Widget.LyricCast.Spinner.Underlined</item>
        <item name="textInputStyle">@style/Widget.LyricCast.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.LyricCast.TabLayout</item>
        <item name="checkboxStyle">@style/Widget.LyricCast.CheckBox</item>
        <item name="appBarLayoutStyle">@style/Widget.LyricCast.AppBarLayout</item>

        <item name="toolbarNavigationButtonStyle">
            @style/Widget.LyricCast.Toolbar.Button.Navigation
        </item>
        <item name="android:actionOverflowButtonStyle">
            @style/Widget.LyricCast.ActionButton.Overflow
        </item>
    </style>

    <style name="Theme.LyricCast.NoActionBar" parent="Theme.LyricCast.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/color_background_primary</item>
    </style>

    <style name="Theme.LyricCast.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowNoTitle">false</item>

        <item name="android:textColor">@color/dialog_text</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/dialog_button</item>

        <item name="textInputStyle">@style/Widget.LyricCast.TextInputLayout</item>
        <item name="spinnerStyle">@style/Widget.LyricCast.Spinner.Underlined</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.LyricCast.Dialog.NegativeButtonStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.LyricCast.Dialog.PositiveButtonStyle
        </item>
    </style>

    <style name="Theme.LyricCast.Dialog.NoTitle" parent="Theme.LyricCast.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>