<resources>

    <style name="Theme.LyricCast.DarkActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!--        <item name="colorPrimary">@color/color_primary</item>-->
        <!--        <item name="colorPrimaryDark">@color/color_primary_dark</item>-->
        <!--        <item name="colorAccent">@color/accent</item>-->
        <!--        <item name="android:navigationBarColor">@color/color_primary_dark</item>-->

        <item name="alertDialogTheme">@style/ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle</item>
        <item name="dialogTheme">@style/ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle</item>

        <!--        <item name="mediaRouteButtonTint">@color/white</item>-->
        <!--        <item name="android:textColorPrimary">@color/white</item>-->

        <item name="android:textViewStyle">@style/Widget.LyricCast.TextView</item>
        <item name="materialButtonStyle">@style/Widget.LyricCast.Button</item>
        <item name="buttonStyle">@style/Widget.LyricCast.Button</item>
        <item name="autoCompleteTextViewStyle">@style/ThemeOverlay.Material3.AutoCompleteTextView
        </item>
        <item name="textInputStyle">@style/Widget.LyricCast.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.LyricCast.TabLayout</item>
        <item name="checkboxStyle">@style/Widget.LyricCast.CheckBox</item>
        <item name="appBarLayoutStyle">@style/Widget.LyricCast.AppBarLayout</item>

        <item name="toolbarNavigationButtonStyle">
            @style/Widget.LyricCast.Toolbar.Button.Navigation
        </item>
        <item name="android:actionOverflowButtonStyle">
            @style/Widget.LyricCast.ActionButton.Overflow
        </item>
        <!-- TODO: Replace with rounded icon -->
        <item name="actionModeCloseDrawable">@drawable/round_close_24_white</item>
        <item name="actionModeCloseButtonStyle">
            @style/Widget.LyricCast.ActionButton
        </item>
    </style>

    <style name="Theme.LyricCast.NoActionBar" parent="Theme.LyricCast.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- TODO: add title when title padding is fixed by google -->
    <style name="ThemeOverlay.LyricCast.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle" parent="ThemeOverlay.LyricCast.MaterialAlertDialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>