<resources>

    <style name="Base.Theme.LyricCast.DarkActionBar" parent="@style/Theme.Material3.DynamicColors.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_1</item>
        <item name="android:colorBackground">@color/background_1</item>

        <item name="alertDialogTheme">@style/ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle
        </item>
        <item name="dialogTheme">@style/ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle</item>

        <item name="materialButtonStyle">@style/Widget.LyricCast.Button</item>
        <item name="buttonStyle">@style/Widget.LyricCast.Button</item>
        <item name="autoCompleteTextViewStyle">@style/ThemeOverlay.Material3.AutoCompleteTextView
        </item>
        <item name="textInputStyle">@style/Widget.LyricCast.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.LyricCast.TabLayout</item>
        <item name="appBarLayoutStyle">@style/Widget.LyricCast.AppBarLayout.Static</item>

        <item name="toolbarNavigationButtonStyle">
            @style/Widget.LyricCast.Toolbar.Button.Navigation
        </item>
        <item name="actionModeStyle">@style/Widget.LyricCast.ActionMode</item>
        <item name="android:actionOverflowButtonStyle">
            @style/Widget.LyricCast.ActionButton.Overflow
        </item>
        <item name="actionModeCloseDrawable">@drawable/round_close_24</item>
        <item name="actionModeCloseButtonStyle">
            @style/Widget.LyricCast.ActionButton
        </item>
    </style>

    <style name="Theme.LyricCast.DarkActionBar" parent="Base.Theme.LyricCast.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.LyricCast.NoActionBar" parent="Theme.LyricCast.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="ThemeOverlay.LyricCast.MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- TODO: set to false when title padding issue is fixed by google -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ThemeOverlay.LyricCast.MaterialAlertDialog.NoTitle" parent="@style/ThemeOverlay.LyricCast.MaterialAlertDialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>