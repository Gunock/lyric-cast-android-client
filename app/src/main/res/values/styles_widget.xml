<resources>

    <style name="Widget.LyricCast.TabLayout" parent="@style/Widget.Material3.TabLayout">
        <item name="android:background">@color/background_3</item>
    </style>

    <style name="Widget.LyricCast.TextInputLayout" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="materialThemeOverlay">@style/ThemeOverlay.LyricCast.EditText</item>
    </style>

    <style name="Widget.LyricCast.TextInputLayout.FilledBox.ExposedDropdownMenu" parent="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/background_4</item>

        <!-- TODO: Theme dropdown background color -->

        <item name="hintTextColor">@color/accent</item>
    </style>

    <style name="temp">
        <item name="colorSurface">@android:color/black</item>
    </style>

    <style name="ThemeOverlay.LyricCast.EditText" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/Widget.LyricCast.EditText</item>
    </style>

    <style name="Widget.LyricCast.EditText" parent="@style/Widget.Material3.TextInputEditText.FilledBox">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.LyricCast.AppBarLayout" parent="@style/Widget.Material3.AppBarLayout">
        <item name="android:background">@color/background_2</item>
        <item name="liftOnScrollColor">@color/background_1</item>
    </style>

    <style name="Widget.LyricCast.AppBarLayout.Static" parent="Widget.LyricCast.AppBarLayout">
        <item name="android:background">@color/background_1</item>
        <item name="liftOnScrollColor">@color/background_1</item>
        <item name="liftOnScroll">false</item>
    </style>

    <style name="Widget.LyricCast.Button" parent="@style/Widget.Material3.Button">
        <item name="android:textColor">@color/button_text_2</item>
    </style>

    <style name="Widget.LyricCast.Button.Light" parent="Widget.LyricCast.Button">
        <item name="android:textColor">@color/button_text_2</item>
    </style>

    <style name="Widget.LyricCast.Button.Icon.Light" parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="iconTint">@color/button_text_2</item>
    </style>

    <style name="Widget.LyricCast.ActionMode" parent="@style/Widget.Material3.ActionMode">
        <item name="background">@color/background_1</item>
    </style>

    <style name="Widget.LyricCast.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/icon_primary</item>
    </style>

    <style name="Widget.LyricCast.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
    </style>

    <style name="Widget.LyricCast.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="tint">@color/icon_primary</item>

        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:height">38dp</item>
    </style>

</resources>