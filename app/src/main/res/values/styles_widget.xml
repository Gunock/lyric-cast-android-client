<resources>

    <style name="Widget.LyricCast.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Widget.LyricCast.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:background">@color/color_background_primary</item>
    </style>

    <style name="Widget.LyricCast.TabLayout.Bottom" parent="Widget.LyricCast.TabLayout">
        <item name="android:background">@color/window_background_2</item>

        <item name="tabTextColor">@color/text</item>
        <item name="tabIndicatorColor">@color/accent</item>
    </style>

    <style name="Widget.LyricCast.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="boxStrokeColor">@color/text_input_stroke</item>

        <item name="hintTextColor">@color/accent</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="materialThemeOverlay">@style/ThemeOverlay.LyricCast.EditText</item>
    </style>

    <style name="ThemeOverlay.LyricCast.EditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/Widget.LyricCast.EditText</item>
    </style>

    <style name="Widget.LyricCast.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorControlActivated">@color/text_hint</item>
        <item name="android:colorControlActivated">@color/text_hint</item>
    </style>

    <style name="Widget.LyricCast.Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:backgroundTint">@color/text_hint</item>
    </style>

    <style name="Widget.LyricCast.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_state_list</item>
    </style>

    <style name="Widget.LyricCast.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/color_background_primary</item>
    </style>

    <style name="Widget.LyricCast.AppBarLayout.Light" parent="Widget.LyricCast.AppBarLayout">
        <item name="android:background">@color/color_secondary</item>
    </style>

    <style name="Widget.LyricCast.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text_1</item>
    </style>

    <style name="Widget.LyricCast.Button.Light" parent="Widget.LyricCast.Button">
        <item name="android:textColor">@color/button_text_2</item>
    </style>

    <style name="Widget.LyricCast.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:tint">@color/button_text_1</item>
    </style>

    <style name="Widget.LyricCast.ImageButton.Light" parent="Widget.LyricCast.ImageButton">
        <item name="android:tint">@color/button_text_2</item>
    </style>

    <style name="Widget.LyricCast.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.LyricCast.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.LyricCast.Dialog.NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button</item>
    </style>

    <style name="Widget.LyricCast.Dialog.PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button</item>
    </style>

</resources>