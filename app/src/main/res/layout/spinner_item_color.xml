<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LyricCast.Spinner.Item"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/window_background_2"
    android:clipToPadding="false"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_spinner_category_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@color/color_primary_dark"
        android:elevation="@dimen/card_elevation_small"
        android:outlineProvider="background"
        app:cardBackgroundColor="@color/placeholder_card_color_1"
        app:cardCornerRadius="@dimen/card_radius_small"
        app:layout_constraintBottom_toBottomOf="@+id/tv_spinner_color_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_spinner_color_name">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_spinner_color_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/placeholder_text"
        android:textColor="@color/text"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cdv_spinner_category_color"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>