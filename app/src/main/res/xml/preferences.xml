<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Chromecast">

        <ListPreference
            android:id="@+id/backgroundColor"
            app:defaultValue="Black"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="backgroundColor"
            app:title="Background color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:id="@+id/fontColor"
            app:defaultValue="White"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="fontColor"
            app:title="Font color"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
            android:id="@+id/modelCategory"
            app:defaultValue="20"
            app:key="fontSize"
            app:title="Font size"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>