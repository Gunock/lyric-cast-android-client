<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/SongListFragment">

    <fragment
        android:id="@+id/SongListFragment"
        android:name="pl.gunock.lyriccast.fragments.SongListFragment"
        android:label="@string/songs"
        tools:layout="@layout/fragment_song_list">

        <action
            android:id="@+id/action_SongListFragment_to_ControlsFragment"
            app:destination="@id/ControlsFragment" />
        <action
            android:id="@+id/action_SongListFragment_to_SetlistsFragment"
            app:destination="@id/SetlistsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SetlistsFragment"
        android:name="pl.gunock.lyriccast.fragments.SetlistsFragment"
        android:label="@string/setlists"
        tools:layout="@layout/fragment_setlists">
        <action
            android:id="@+id/action_SetlistsFragment_to_SongListFragment"
            app:destination="@id/SongListFragment" />
    </fragment>
    <fragment
        android:id="@+id/ControlsFragment"
        android:name="pl.gunock.lyriccast.fragments.ControlsFragment"
        android:label="@string/controls"
        tools:layout="@layout/fragment_controls">

        <action
            android:id="@+id/action_ControlsFragment_to_SongListFragment"
            app:destination="@id/SongListFragment" />

        <argument
            android:name="songTitle"
            app:argType="string" />
        <argument
            android:name="lyrics"
            app:argType="string[]" />
    </fragment>
</navigation>