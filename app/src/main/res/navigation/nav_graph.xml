<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SongListFragment">

    <fragment
        android:id="@+id/SongListFragment"
        android:name="pl.gunock.lyriccast.SongListFragment"
        android:label="@string/song_list_fragment_label"
        tools:layout="@layout/fragment_song_list">

        <action
            android:id="@+id/action_SongListFragment_to_ControlsFragment"
            app:destination="@id/ControlsFragment" />
    </fragment>
    <fragment
        android:id="@+id/ControlsFragment"
        android:name="pl.gunock.lyriccast.ControlsFragment"
        android:label="@string/controls_fragment_label"
        tools:layout="@layout/fragment_controls">

        <action
            android:id="@+id/action_ControlsFragment_to_SongListFragment"
            app:destination="@id/SongListFragment" />
    </fragment>
</navigation>